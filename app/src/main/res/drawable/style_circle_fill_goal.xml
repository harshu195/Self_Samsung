<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/secondaryProgress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270" >
            <shape
                android:innerRadiusRatio="2.8"
                android:shape="ring"
                android:thicknessRatio="40.0"
                android:useLevel="true" >
                <gradient
                    android:centerColor="#88153e"
                    android:endColor="#88153e"
                    android:startColor="#88153e"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270" >
            <shape
                android:innerRadiusRatio="3"
                android:shape="ring"
                android:thicknessRatio="12.0"
                android:useLevel="true" >
                <gradient
                    android:centerColor="#d51c55"
                    android:endColor="#d51c55"
                    android:startColor="#d51c55"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>

</layer-list>